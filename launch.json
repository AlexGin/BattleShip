{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/battleship",
            "cwd": "${workspaceFolder}",
            "args": ["~/BattleShip/battleship"],
